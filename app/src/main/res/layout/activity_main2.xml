<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#42A6AF"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity2">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/custom_login"
        app:cardCornerRadius="50dp"
        app:cardElevation="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="727dp"
            android:layout_gravity="center_horizontal"
            android:background="#3A7E3B"
            android:backgroundTint="#00C54949"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/putInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                android:fontFamily="sans-serif-medium"
                android:padding="15dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:text=""
                android:textSize="26sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/userOTP"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:hint="Enter OTP"
                android:background="@drawable/custom_login"
                android:drawableStart="@drawable/baseline_lock_24"
                android:ems="9"
                android:inputType="text"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:textAlignment="center"
                android:textColorHint="#000000"
                android:textSize="25sp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text=""
                tools:ignore="HardcodedText"
                android:autofillHints="" />

            <Button
                android:id="@+id/valid"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Verify"
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
                android:textSize="26sp"
                android:padding="4dp"
                android:fontFamily="sans-serif-condensed-medium"
                tools:ignore="HardcodedText"/>


            <TextView
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:fontFamily="sans-serif-medium"
                android:padding="5dp"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/resendinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:fontFamily="sans-serif-medium"
                android:padding="5dp"
                android:text="@string/resend_info"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/resendOTP"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Re-send OTP"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:textSize="26sp"
                android:padding="4dp"
                android:fontFamily="sans-serif-condensed-medium"
                tools:ignore="HardcodedText"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>
